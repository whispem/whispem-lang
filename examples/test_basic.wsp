# While
let i = 0
while i < 3 {
    print i
    let i = i + 1
}

# For + range
for n in range(0, 5) {
    print n
}

# Fonction
fn double(n) {
    return n * 2
}
print double(7)

# Récursion
fn factorial(n) {
    if n <= 1 { return 1 }
    return n * factorial(n - 1)
}
print factorial(5)

