print ""
print "=== Functions with Arrays ==="
fn sum_array(arr) {
    let total = 0
    for num in arr {
        let total = total + num
    }
    return total
}

let numbers = [1, 2, 3, 4, 5]
let sum = sum_array(numbers)
print "Sum of array:"
print sum

