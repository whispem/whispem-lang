# ===== Functions =====

fn add(a, b) {
    return a + b
}

fn greet(name) {
    print "Hello, " + name + "!"
}

fn is_even(n) {
    if n == 0 {
        return true
    }
    if n == 1 {
        return false
    }
    return is_even(n - 2)
}

# ===== Test Basic Function =====
greet("Whispem")

# ===== Test Return Value =====
let sum = add(10, 20)
print sum

# ===== Test Recursion =====
let result = is_even(10)
print result

let result2 = is_even(7)
print result2

# ===== Test String Concatenation =====
let greeting = "Hello, " + "World!"
print greeting

# ===== Test Function in Expression =====
let x = add(5, 3) * 2
print x

# ===== Test While with Functions =====
fn count_up(max) {
    let i = 0
    while i < max {
        print i
        let i = i + 1
    }
}

count_up(3)

print "All tests passed!"
